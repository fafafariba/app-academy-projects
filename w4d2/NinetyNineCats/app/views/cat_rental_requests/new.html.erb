<h1>MAKE A NEW CAT RENTAL REQUEST</h1>

<form action=" <%= cat_rental_requests_url %> " method="post">

  <label for="cat_rental_request_cat_id">Choose Your Cat</label>
  <select id="cat_rental_request_cat_id" name="cat_rental_request[cat_id]">
    <option disabled="disabled" selected="selected">Please select one </option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"> <%= cat.name %> </option>
    <% end %>
  </select>

  <br><br>

  <label for="cat_rental_request_start_date">Start Date</label>
  <input id="cat_rental_request_start_date" type="date" name="cat_rental_request[start_date]" >

  <br><br>

  <label for="cat_rental_request_end_date">End Date</label>
  <input id="cat_rental_request_end_date" type="date" name="cat_rental_request[end_date]" >

  <br><br>

  <input type="submit" value="Submit">
</form>
